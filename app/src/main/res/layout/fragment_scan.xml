<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/scan_instructions"
            android:textSize="20sp"
            android:textColor="#fd0303"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <SurfaceView
            android:layout_width="260dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:id="@+id/scan_qr_surfaceview"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/scan_uniqcode_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_code_instruction"
            android:textAlignment="center"
            android:inputType="text"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/scan_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle"
            android:layout_marginBottom="50dp"
            android:text="Submit Code"/>

    </LinearLayout>



</ScrollView>